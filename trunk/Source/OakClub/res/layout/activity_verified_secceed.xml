<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/up_thankyou_base_popup"
    android:orientation="vertical" >

    <com.oakclub.android.view.TextViewWithFont
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/txt_thank_you"
        android:textColor="@color/BlueLight"
        android:textSize="50sp" />
	<com.oakclub.android.view.TextViewWithFont
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/txt_verified_member"
	    android:layout_gravity="center"
	    android:gravity="center"
	    android:textSize="19sp"
	/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
         >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/stick_popup" />

            <com.oakclub.android.view.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/txt_verified_content_1"
                android:textColor="@color/BlueLight"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:src="@drawable/stick_popup" />

            <com.oakclub.android.view.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/txt_verified_content_2"
                android:textColor="@color/BlueLight"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/txt_verified_title"
        android:src="@drawable/verified_icon_popup" />

    <Button
        android:id="@+id/activity_secceed_verify_btn_ok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/blue_boder_button"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/txt_got_it"
        android:textColor="@color/BlueLight"
        android:textSize="20sp" />

    <com.oakclub.android.view.TextViewWithFont
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/txt_take_to_snapshot"
        android:textColor="@color/BlackMidium"
        android:textSize="14sp" />

</LinearLayout>