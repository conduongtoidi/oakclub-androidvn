<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_base"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_profile_info_other_body_imgAboutme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_profile_logo" />

        <com.oakclub.android.view.TextViewWithFont
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/Purple"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/dialog_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/linearLayoutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/editText" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/Black"
        android:inputType="text"
        android:hint="@string/txt_type_message"
        />
        
    
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/white_purple_btn_"
        android:text="@string/txt_report_user"
        android:textColor="@color/Purple" />
    
    <Button
        android:id="@+id/dialog_report_spam_input_block_user"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/button_block_user"
        android:text="@string/txt_block_user"
        android:textColor="@color/White" />

</LinearLayout>