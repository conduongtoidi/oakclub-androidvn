<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/dialog_choose_language_lltTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/navigation_base"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activity_profile_info_other_body_imgAboutme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_profile_logo" />

        <com.oakclub.android.view.TextViewWithFont
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="@color/Purple"
            android:textSize="22sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/dialog_scrollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" 
        android:layout_above="@+id/dialog_choose_language_vLine"
        android:layout_below="@+id/dialog_choose_language_lltTitle"
        >

        <LinearLayout
            android:id="@+id/linearLayoutGroup"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp" >
            </RadioGroup>
        </LinearLayout>
    </ScrollView>
    <View
        android:id="@+id/dialog_choose_language_vLine"    
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/ok_btn"
        android:background="#d7d7d7"/>
    <Button
        android:id="@+id/ok_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/white_purple_btn_"
        android:text="OK"
        android:padding="12dp"
        android:textColor="@color/Purple" />

</RelativeLayout>