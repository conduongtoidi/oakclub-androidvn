<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vip_base" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vip_base"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/vip_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/vip_lgo" />

        <com.oakclub.android.view.TextViewWithFont
            android:id="@+id/get_vip_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/txt_vip_title"
            android:textColor="@color/GoldLight"
            android:textSize="30sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >

            <com.oakclub.android.view.TextViewWithFont
                android:id="@+id/vip_content_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/vip_tick"
                android:drawablePadding="5dp"
                android:text="@string/txt_vip_content_1"
                android:textColor="@color/Gold"
                android:textSize="14sp"
                android:textStyle="bold" />

            <com.oakclub.android.view.TextViewWithFont
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:drawableLeft="@drawable/vip_tick"
                android:drawablePadding="5dp"
                android:text="@string/txt_vip_content_2"
                android:textColor="@color/Gold"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <com.oakclub.android.view.TextViewWithFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/vip_tick"
            android:drawablePadding="5dp"
            android:layout_gravity="center"
            android:text="@string/txt_vip_content_3"
            android:textColor="@color/Gold"
            android:textSize="14sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/separators" />

            <LinearLayout
                android:id="@+id/layout_package_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/txt_get_vip_package_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:text="@string/txt_month"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".7"
                    android:gravity="left" >

                    <RadioButton
                        android:id="@+id/radio_get_vip_package_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="false" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_price_package_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/radio_get_vip_package_1"
                        android:text="@string/txt_USD"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/separators" />

            <LinearLayout
                android:id="@+id/layout_package_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/txt_get_vip_package_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:text="@string/txt_months"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".7"
                    android:gravity="left" >

                    <RadioButton
                        android:id="@+id/radio_get_vip_package_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="false" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_price_package_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/radio_get_vip_package_2"
                        android:text="@string/txt_USD"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_billed_package_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_price_package_2"
                        android:layout_toRightOf="@+id/radio_get_vip_package_2"
                        android:text="@string/txt_billed"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_save_package_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_billed_package_2"
                        android:layout_toRightOf="@+id/radio_get_vip_package_2"
                        android:text="@string/txt_save"
                        android:textColor="@color/Red"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/separators" />

            <LinearLayout
                android:id="@+id/layout_package_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/txt_get_vip_package_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:text="@string/txt_months"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".7"
                    android:gravity="left" >

                    <RadioButton
                        android:id="@+id/radio_get_vip_package_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="false" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_price_package_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/radio_get_vip_package_3"
                        android:text="@string/txt_USD"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_billed_package_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_price_package_3"
                        android:layout_toRightOf="@+id/radio_get_vip_package_3"
                        android:text="@string/txt_billed"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_save_package_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_billed_package_3"
                        android:layout_toRightOf="@+id/radio_get_vip_package_3"
                        android:text="@string/txt_save"
                        android:textColor="@color/Red"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/separators" />

            <LinearLayout
                android:id="@+id/layout_package_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="left"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/txt_get_vip_package_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight=".3"
                    android:text="@string/txt_months"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight=".7"
                    android:gravity="left" >

                    <RadioButton
                        android:id="@+id/radio_get_vip_package_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:checked="false" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_price_package_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/radio_get_vip_package_4"
                        android:text="@string/txt_USD"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_billed_package_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_price_package_4"
                        android:layout_toRightOf="@+id/radio_get_vip_package_4"
                        android:text="@string/txt_billed"
                        android:textColor="@color/Black"
                        android:textSize="10sp" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/txt_save_package_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_billed_package_4"
                        android:layout_toRightOf="@+id/radio_get_vip_package_4"
                        android:text="@string/txt_save"
                        android:textColor="@color/Red"
                        android:textSize="10sp" />
                </RelativeLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/separators" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_get_vip"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/gold_button_selector"
                android:drawableLeft="@drawable/vip_icon"
                android:drawablePadding="5dp"
                android:gravity="left|center"
                android:text="@string/txt_get_vip_btn"
                android:textColor="@color/White" />

            <Button
                android:id="@+id/btn_cencel_get_vip"
                style="@style/button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/get_vip_cancel_button_selector"
                android:gravity="center"
                android:text="@string/txt_cancel"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>