<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/activity_profile_info_other_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White" >

        <FrameLayout
            android:id="@+id/activity_profile_info_other_header_fltSnapshot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White" >

            <android.support.v4.view.ViewPager
                android:id="@+id/activity_profile_info_other_header_fltSnapshot_vpr_list_images"
                android:layout_width="match_parent"
                android:layout_height="@dimen/profile_info_other_image"
                android:layout_gravity="center" />

            <RelativeLayout
                android:id="@+id/activity_profile_info_other_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:background="#aa000000"
                android:padding="5dp" >

                <Button
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_btDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/btn_done_selector_other_profile"
                    android:padding="10dp"
                    android:text="@string/txt_done"
                    android:textColor="#fff" />
                
                <ImageButton
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_imgPlayvideo"
                    android:layout_toRightOf="@+id/activity_profile_info_other_header_fltSnapshot_btDone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/play_icon_onimage"/>

                <ImageButton
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_ibNope"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/activity_profile_info_other_header_fltSnapshot_ibLike"
                    android:background="@drawable/pass_btn" />

                <ImageButton
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_ibLike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/like_btn" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_profile_info_other_bottom_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="#aa000000"
                android:gravity="center" 
                >

                <ImageView
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_ivCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/activity_profile_info_other_header_fltSnapshot_tvwNumCapture"
                    android:layout_centerInParent="true"
                    android:src="@drawable/total_photo_icon" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_tvwNumCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerInParent="true"
                    android:text="4/30"
                    android:textColor="#fff" />
                
                <ImageView
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_ivVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/activity_profile_info_other_header_fltSnapshot_tvwNumCapture"
                    android:layout_centerInParent="true"
                    android:src="@drawable/playicon" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_header_fltSnapshot_tvwNumVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/activity_profile_info_other_header_fltSnapshot_ivVideo"
                    android:layout_centerInParent="true"
                    android:text="0"
                    android:textColor="#fff" />
            </RelativeLayout>
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/activity_profile_info_other_rltContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_profile_info_other_header_fltSnapshot" >

            <FrameLayout
                android:id="@+id/activity_profile_info_other_body_fltInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_fltInfo_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="Hiếu Phạm"
                    android:textSize="20sp" />

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right" >
                    <ImageButton
                        android:id="@+id/activity_profile_info_other_body_fltInfo_imgReport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:background="@color/transparent"
                        android:src="@drawable/btn_report_" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_fltInfo_tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:text="23"
                        android:textSize="20sp"
                        android:visibility="gone" />
                </FrameLayout>
            </FrameLayout>

            <View
                android:id="@+id/activity_profile_info_other_body_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/activity_profile_info_other_body_fltInfo"
                android:layout_gravity="bottom"
                android:background="#a0a0a0" />

            <RelativeLayout
                android:id="@+id/activity_profile_info_other_body_rltInfoDistance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_profile_info_other_body_line"
                android:padding="10dp" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/txt_distance"
                    android:textColor="#a0a0a0" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_rltInfoDistance_tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextDistance"
                    android:text="less than amile away"
                    android:textColor="#484848" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextDistance"
                    android:text="@string/txt_active"
                    android:textColor="#a0a0a0" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_rltInfoDistance_tvActive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextDistance"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextActive"
                    android:text="just now"
                    android:textColor="#484848" />

                <ImageView
                    android:id="@+id/activity_profile_info_other_body_imgShareInterests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoDistance_tvTextActive"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_sharedinterests" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_tvShareInterests"
                    style="@style/profile_info_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoDistance_tvActive"
                    android:layout_toRightOf="@+id/activity_profile_info_other_body_imgShareInterests"
                    android:paddingLeft="10dp"
                    android:text="@string/txt_share_interested_in"
                    android:textAllCaps="false" />

                <RelativeLayout
                    android:id="@+id/activity_profile_info_other_body_rltInfoShareInterests"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_tvShareInterests"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center_vertical"
                    android:padding="0dp" >

                    <com.oakclub.android.view.ViewPagerCustom
                        android:id="@+id/activity_profile_info_other_body_vpShareInterests"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:scrollbars="none" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/activity_profile_info_other_body_imgMutualFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoShareInterests"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_mutualfriends" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_tvMutualFriends"
                    style="@style/profile_info_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoShareInterests"
                    android:layout_toRightOf="@+id/activity_profile_info_other_body_imgMutualFriends"
                    android:paddingLeft="10dp"
                    android:text="@string/txt_mutual_friends"
                    android:textAllCaps="false" />

                <RelativeLayout
                    android:id="@+id/activity_profile_info_other_body_rltInfoMutualFriends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_tvMutualFriends"
                    android:layout_marginTop="10dp"
                    android:gravity="left|center_vertical" >

                    <com.oakclub.android.view.ViewPagerCustom
                        android:id="@+id/activity_profile_info_other_body_vpMutualFriends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scrollbars="none" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/activity_profile_info_other_body_imgAboutme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoMutualFriends"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/icon_aboutme" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_tvAboutMe"
                    style="@style/profile_info_text_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_rltInfoMutualFriends"
                    android:layout_toRightOf="@+id/activity_profile_info_other_body_imgAboutme"
                    android:paddingLeft="10dp"
                    android:text="@string/txt_about"
                    android:textAllCaps="false" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/activity_profile_info_other_body_tvInfoAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_tvAboutMe"
                    android:maxLines="5"
                    android:paddingLeft="10dp"
                    android:scrollbars="vertical"
                    android:text="" />

                <!-- location -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltLocation"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_tvInfoAboutMe"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_imgLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/livingin" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="location" />
                </LinearLayout>

                <!-- home -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltHome"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltLocation"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_imgHome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/hometown" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_home"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="home" />
                </LinearLayout>

                <!-- birthday -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltBirthday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltHome"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_imgBirthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/birth_info" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="birthday" />
                </LinearLayout>

                <!-- school -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltSchool"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltBirthday"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_imgSchool"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/education" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_school"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="school" />
                </LinearLayout>

                <!-- work -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltWork"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltSchool"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_imgWork"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/job" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_work"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="work" />
                </LinearLayout>

                <!-- interested in -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltInterested"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltWork"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_imgInterested"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/interested_in" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_interested"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="interested in" />
                </LinearLayout>

                <!-- like view -->

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltViewed"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltInterested"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_rltInfoDistance_ivViewed"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/views_icon_purple" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_rltInfoDistance_tvViewed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="6969"
                        android:textColor="#484848" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_profile_info_other_body_lltLiked"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/activity_profile_info_other_body_lltViewed"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/activity_profile_info_other_body_rltInfoDistance_ivLiked"
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:src="@drawable/like_btn_purple" />

                    <com.oakclub.android.view.TextViewWithFont
                        android:id="@+id/activity_profile_info_other_body_rltInfoDistance_tvLiked"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="6969"
                        android:textColor="#484848" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>