<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_package"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left"
    android:gravity="left"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/vip_separators"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/vip_separators" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_get_vip_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false" />

        <LinearLayout
            android:id="@+id/layout_vip_package"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/txt_get_vip_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_int_app_product_title"
                    android:textColor="@color/Black"
                    android:textSize="15sp" />

                <com.oakclub.android.view.TextViewWithFont
                    android:id="@+id/txt_save_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/sale_off_box"
                    android:padding="3dp"
                    android:text="@string/txt_save"
                    android:textColor="@color/White"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.oakclub.android.view.TextViewWithFont
                android:id="@+id/txt_price_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_month"
                android:textColor="@color/Blue"
                android:textSize="18sp" />

            <com.oakclub.android.view.TextViewWithFont
                android:id="@+id/txt_billed_package"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_total_bill"
                android:textColor="@color/BlackMidium"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>